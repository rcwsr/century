{% extends "layout.html.twig" %}
{% block body %}

<div class="row">
    <div class="span12">
        <h1>Edit ride</h1>
            <div class="row">
                <div class="span6">
                    <form action="" method="post">
                        <fieldset>
                            <legend>Modify the details of your ride below</legend>
                            {% if errors %}
                                <div class="alert alert-danger"><strong>{{ errors }}</strong></div>
                            {% endif %}
                            {{ form_label(form.km) }}
                            <div class="input-append">
                                {{ form_widget(form.km, {'attr': {'class': 'input-mini'}}) }}
                                <span class="add-on">
                                {% if app.security.getToken().getUser().isMetric() %}   
                                   km
                                {% else %}
                                   mi
                                {% endif %}
                                </span>
                            </div>
                            {{ form_label(form.average_speed) }}
                            <div class="input-append">
                                {{ form_widget(form.average_speed, {'attr': {'class': 'input-mini'}}) }}
                                <span class="add-on">
                                {% if app.security.getToken().getUser().isMetric() %}   
                                   km/h
                                {% else %}
                                   mph
                                {% endif %}</span>
                            </div>

                            {{ form_label(form.url) }}
                            {{ form_widget(form.url) }}

                            {{ form_label(form.date) }}
                            {{ form_widget(form.date, {'attr': {'class': 'datepicker'}}) }}

                            {{ form_label(form.details) }}
                            {{ form_widget(form.details, {'attr': {'class': 'input-xlarge', 'rows': 8}}) }}
                            <div class="clearfix"></div>
                            <button  type="submit" class="btn btn-success" name="submit">Edit Ride</button>
                        </fieldset>
                        
                    </form>
                </div>
        </div>      
    </div>
</div> 


<script>
$(function(){
    $('.datepicker').datepicker({
        format: 'yyyy-mm-dd'
    });
});
</script>
{% endblock %}