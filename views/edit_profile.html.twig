{% extends "layout.html.twig" %}

{% block body %}
<div class="row">
    <div class="span12">
        <h1>Edit profile</h1>
    </div>
</div>

<div class="row">
    <div class="span12">
        <form action="" method="post">
            {% if errors %}
                <div class="alert alert-danger"><strong>{{ errors }}</strong></div>
            {% endif %}
            
           
            <fieldset>
                <legend>Modify your details below</legend>
                {% autoescape %}

                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}

                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}

                {{ form_label(form.forum_name) }}
                {{ form_widget(form.forum_name) }}

                {{ form_label(form.metric) }}
                {{ form_widget(form.metric) }}

                {{ form_label(form.strava) }}
                <div class="input-prepend">
                     <span class="add-on">http://app.strava.com/athletes/</span>
                     {{ form_widget(form.strava, {'attr': {'class': 'input-mini'}}) }}
                </div>
                {% endautoescape %}
            </fieldset>

            

            <button  type="submit" class="btn btn-success" name="submit">Save</button>
            <span class="help-inline">* denotes required field</span>
        </form>
    </div>
</div>
{% endblock %}