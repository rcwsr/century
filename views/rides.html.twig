{% extends "layout.html.twig" %}

{% block body %}
<div class="row">
    <div class="span12">
        <h1>{{ user.name }}'s Rides</h1>
    </div>
</div>

<div class="row">
    <div class="span12">
    {% for day in days %}
        <h2>{{ day.date }}</h2>
        {% for ride in day.rides %}
        {{ ride.toString }}<br>
        {% endfor %}
    {% endfor %}
    </div>
</div>

<div class="row">
    <div class="span12">
    </div>
</div>
{% endblock %}