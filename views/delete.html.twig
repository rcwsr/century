{% extends "layout.html.twig" %}
{% block body %}

<div class="row">
    <div class="span12">
        <h1>Delete ride</h1>
            <div class="row">
                <div class="span6">
                    <form action="" method="post">
                        <fieldset>
                            <legend>Are you sure you want to delete this ride?</legend>
                            <a href="{% if referer %}{{ referer }}{% else %}/{% endif %}" class="btn btn-info"><i class="icon-arrow-left icon-white"></i> No, take me home</a>
                            <button class="btn btn-danger"><i class="icon-trash icon-white"></i> Yes, delete it already</button>
                        </fieldset>
                        
                    </form>
                </div>
        </div>      
    </div>
</div> 
{% endblock %}